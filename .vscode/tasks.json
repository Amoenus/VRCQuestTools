{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "lint",
			"detail": "Run analyzers",
			"type": "shell",
			"command": "dotnet",
			"problemMatcher": {
				"owner": "csharp",
				"fileLocation": "absolute",
				"pattern": [
					{
						"regexp": "^\\s*(.+)\\((\\d+),(\\d+)\\):\\s+(warning|error)\\s+(\\w+):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"code": 5,
						"message": 6
					}
				]
			},
			"args": [
				"build",
				"--no-incremental",
				"${workspaceFolderBasename}.sln"
			],
			"options": {
				"env": {
					"DOTNET_CLI_UI_LANGUAGE": "en"
				}
			}
		},
		{
			"label": "Start Website",
			"detail": "docusaurus start",
			"type": "shell",
			"command": "npm",
			"problemMatcher": [],
			"args": [
				"start"
			],
			"options": {
				"cwd": "${workspaceFolder}/Website"
			},
		},
		{
			"label": "Start Website (ja)",
			"detail": "docusaurus start with Japanese locale",
			"type": "shell",
			"command": "npm",
			"problemMatcher": [],
			"args": [
				"start",
				"--",
				"--locale=ja"
			],
			"options": {
				"cwd": "${workspaceFolder}/Website"
			},
		}
	]
}
