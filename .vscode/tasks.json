{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "lint",
			"detail": "Run analyzers",
			"type": "shell",
			"command": "PowerShell",
			"problemMatcher": [
				"$msCompile"
			],
			"args": [
				"-ExecutionPolicy",
				"RemoteSigned",
				".\\scripts\\lint.ps1"
			],
			"options": {
				"env": {
					"DOTNET_CLI_UI_LANGUAGE": "en"
				}
			}
		},
		{
			"label": "Start Website",
			"detail": "docusaurus start",
			"type": "shell",
			"command": "npm",
			"problemMatcher": [],
			"args": [
				"start"
			],
			"options": {
				"cwd": "${workspaceFolder}/Website"
			},
		},
		{
			"label": "Start Website (ja)",
			"detail": "docusaurus start with Japanese locale",
			"type": "shell",
			"command": "npm",
			"problemMatcher": [],
			"args": [
				"start",
				"--",
				"--locale=ja"
			],
			"options": {
				"cwd": "${workspaceFolder}/Website"
			},
		}
	]
}